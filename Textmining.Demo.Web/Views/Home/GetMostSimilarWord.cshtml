@model Textmining.Demo.Web.Models.GetMostSimilarWordModel
@{
    ViewData["Title"] = "دریافت کلمات مرتبط";
    ViewData["Desc"] = "این ابزار تعداد دلخواه از کلمات مرتبط با کلمه ورودی را بر اساس خروجی روش‌های تعبیه کلمات (رویکرد آماری) در پیکره متنی شبکه‌های اجتماعی برمی‌گرداند.";
}


<form data-ajax-url="@Url.Action("GetMostSimilarWord","Home")" data-ajax-loading="#loading" asp-antiforgery="true" data-ajax="true" data-ajax-method="POST" data-ajax-update="#result">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>کلمه ورودی جهت بررسی</label>
        <label class="bmd-label-floating">این ابزار جهت نمونه و آزمایش و براساس پیکره متون خبری و شبکه‌های اجتماعی در سال 1400 ایجاد شده است و ممکن است برای کلمات جدید خروجی مناسبی نداشته باشد.</label>
        <div class="form-group bmd-form-group is-filled">
            <input type="text" asp-for="Word" class="form-control" value="کرونا" />

        </div>
        <label>تعداد کلمات مرتبط</label>
        <div class="form-group bmd-form-group is-filled">
            <label class="bmd-label-floating">تعداد کلمات مرتبط که در نتیجه برمی‌گردند</label>
            <input asp-for="TopN" type="tel" min="1" max="20" step="1" value="10" class="form-control" />
        </div>
    </div>

    <input type="submit" class="btn btn-success btn-xl js-scroll-trigger mt-3" value="ارسال">
</form>

<hr />
<span id="result" class="text-right"></span>