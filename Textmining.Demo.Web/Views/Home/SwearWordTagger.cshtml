@model Textmining.Demo.Web.Models.ApiViewModel
@{
    ViewData["Title"] = "تشخیص عبارات توهین‌آمیز (شناسایی فحش)";
    ViewData["Desc"] = "این ابزار برای پالایش نظرات و پیام‌های سایت‌ها و شبکه‌های اجتماعی مفید است و متن ورودی را از نظر وجود فحش، ناسزا و کلمات رکیک بررسی می‌کند";
}

<form data-ajax-url="@Url.Action("SwearWordTagger","Home")"
