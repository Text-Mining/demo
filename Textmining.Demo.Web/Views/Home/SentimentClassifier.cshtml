    ViewData["Title"] = "تحلیل حس";
    ViewData["Desc"] = "این تابع نوع حس (رضایتمندی) نویسنده متن را به صورت یکی از سه شکل زیر برمی‌گرداند: منفی، خنثی یا مثبت";

}

<form data-ajax-url="@Url.Action("SentimentClassifier","Home")" data-ajax-loading="#loading" asp-antiforgery="true" data-ajax="true" data-ajax-method="POST" data-ajax-update="#result">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
